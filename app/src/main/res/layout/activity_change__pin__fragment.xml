<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.change_PIN_Fragment">

    <EditText
        android:id="@+id/oldPasscodeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:ems="10"
        android:hint="Old Passcode"
        android:inputType="number"
        android:maxLength="5"
        android:digits="0123456789"/>

    <EditText
        android:id="@+id/newPasscodeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oldPasscodeEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:ems="10"
        android:hint="New Passcode"
        android:inputType="number"
        android:maxLength="5"
        android:digits="0123456789"/>

    <Button
        android:id="@+id/changePasscodeSaveButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPasscodeEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:text="Save" />

    <Button
        android:id="@+id/changePasscodeCancelButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPasscodeEditText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="Cancel" />
</RelativeLayout>